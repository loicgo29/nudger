  - experimental
skip_list:
  - yaml[line-length]      # gérée par yamllint
  - fqcn-builtins          # (tu pourras le réactiver plus tard)
exclude_paths:
  - ".venv/"
  - ".git"
  - ".ansible"
  - "infra/k8s_ansible/.ansible/collections"
  - "create-VM/vps/cloud-init.yaml"
  - "**/*.log"
