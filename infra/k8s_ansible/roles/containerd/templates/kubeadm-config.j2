# ClusterConfiguration
apiVersion: kubeadm.k8s.io/v1beta4
kind: ClusterConfiguration
kubernetesVersion: "{{ k8s_release }}"
controlPlaneEndpoint: "{{ apiserver_endpoint | default(ansible_default_ipv4.address ~ ':6443') }}"
networking:
  podSubnet: "{{ pod_network_cidr }}"
  serviceSubnet: "{{ service_subnet | default('10.96.0.0/12') }}"
apiServer:
  certSANs:
    - "127.0.0.1"
    - "{{ ansible_default_ipv4.address }}"                 # IP privée du nœud
    - "{{ inventory_hostname }}"                           # hostname court (si résolu)
    - "{{ ansible_fqdn | default(inventory_hostname) }}"  # FQDN (si résolu)
    - "{{ apiserver_endpoint.split(':')[0] }}"            # VIP/DNS si tu en as un
    - "{{ apiserver_host_global | default(ansible_default_ipv4.address) }}"
    - "91.99.58.109"                                      # IP publique si tu l’utilises vraiment
  extraArgs:
    - name: etcd-servers
      value: "https://{{ ansible_default_ipv4.address }}:2379"
---
# InitConfiguration
apiVersion: kubeadm.k8s.io/v1beta4
kind: InitConfiguration
localAPIEndpoint:
  advertiseAddress: "{{ ansible_default_ipv4.address }}"
nodeRegistration:
  criSocket: unix:///var/run/containerd/containerd.sock
  kubeletExtraArgs:
    - name: cgroup-driver
      value: "systemd"
---
apiVersion: kubelet.config.k8s.io/v1beta1
kind: KubeletConfiguration
cgroupDriver: "systemd"
