{
  "variables": {
    "vm_name": "ubuntu2204_devops",
    "ssh_username": "vagrant",
    "ssh_password": "vagrant"
  },
  "builders": [
    {
      "type": "qemu",
      "iso_url": "https://releases.ubuntu.com/22.04/ubuntu-22.04.7-live-server-amd64.iso",
      "iso_checksum": "sha256:ba8cba0a21d2a8a19a7c207fa3b02e5c0d99c6da4a8e1c173c978b6f061b7a05",
      "output_directory": "output-vm",
      "shutdown_command": "echo 'vagrant' | sudo -S shutdown -P now",
      "disk_size": 20000,
      "format": "qcow2",
      "headless": true,
      "ssh_username": "{{user `ssh_username`}}",
      "ssh_password": "{{user `ssh_password`}}",
      "ssh_wait_timeout": "20m",
      "memory": 4096,
      "cpus": 4
    }
  ],
  "provisioners": [
    {
      "type": "shell",
      "script": "install_all_devops.sh"
    },
    {
      "type": "shell",
      "inline": [
        "echo 'vagrant ALL=(ALL) NOPASSWD:ALL' | sudo tee /etc/sudoers.d/vagrant",
        "sudo chmod 0440 /etc/sudoers.d/vagrant"
      ]
    }
  ],
  "post-processors": [
    {
      "type": "vagrant",
      "output": "ubuntu2204_devops.box"
    }
  ]
}

